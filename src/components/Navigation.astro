---
import profilePicture from "../images/profilePicture.jpeg";
import { banner } from "../../data/config.json";
import mdToHtml from "../mdToHtml";
import { Image } from "astro:assets";
import clsx from "clsx";
import { Icon } from "astro-icon/components";
---

<header class="px-5">
  {
    banner.text && (
      <section
        class={clsx(
          "rounded-md py-1 border-2 border-mantle bg-mantle w-full text-center",
          banner.border,
        )}
        set:html={mdToHtml(banner.text)}
      />
    )
  }
  <nav class="my-5 flex justify-between font-mono text-xl">
    <div class="flex flex-row space-x-4">
      <span>
        <Image
          class="inline w-8 h-8 rounded-full my-auto hover:animate-spin"
          width="64"
          height="64"
          src={profilePicture}
          alt="Sydney Newmark profile shot"
        />
      </span>
      <p class="hidden md:block text-subtext1">sydneyn.dev</p>
    </div>
    <ul class="flex flex-row space-x-3 sm:space-x-10">
      <li>
        <a class="navbar-link ignored-link" href="/">
          <p class="hidden sm:block">/about</p>
          <Icon name="mdi:home" class="navbar-icon" />
        </a>
      </li>
      <li>
        <a class="navbar-link ignored-link" href="/in/blog">
          <p class="hidden sm:block">/blog</p>
          <Icon name="mdi:pencil-box-multiple-outline" class="navbar-icon" />
        </a>
      </li>
      <li>
        <a class="navbar-link ignored-link" href="/projects">
          <p class="hidden sm:block">/projects</p>
          <Icon name="carbon:tool-box" class="navbar-icon" />
        </a>
      </li>
      <li>
        <a class="navbar-link ignored-link" href="/gallery">
          <p class="hidden sm:block">/gallery</p>
          <Icon name="carbon:image-copy" class="navbar-icon" />
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .navbar-link {
    @apply text-subtext1 hover:underline;
  }

  .navbar-icon {
    @apply border-2 p-1 w-8 h-8 rounded-md border-mantle hover:border-subtext1 block sm:hidden;
  }
</style>
