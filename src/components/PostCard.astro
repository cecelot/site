---
import clsx from "clsx";
const { title, description, date, url, featured } = Astro.props;
---

<a
  href={url}
  class={`flex flex-col ignored-link p-3 rounded-3xl ${clsx(featured && "hover:border-mauve", !featured && "hover:border-blue")} border-2 border-crust transition-all ease-in-out`}
>
  {featured && <span class="text-mauve">featured</span>}
  <h2 class="font-semibold">{title}</h2>
  <span class="text-subtext0">{date.toDateString()}</span>
  <span class="text-subtext1">{description}</span>
</a>
