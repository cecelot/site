---
interface Props {
  title: string;
  description: string;
  date?: Date;
  url: string;
  featured?: boolean;
}

import clsx from "clsx";
const { title, description, date, url, featured } = Astro.props;
---

<a
  href={url}
  class={`flex flex-col ignored-link p-3 rounded-lg ${clsx(featured && "hover:border-mauve", !featured && "hover:border-lavender")} border-2 border-mantle`}
>
  {featured && <span class="text-mauve">featured</span>}
  <h2 class="font-bold font-serif">{title}</h2>
  {date && <p class="text-subtext0">{date.toDateString()}</p>}
  <p class="text-subtext1">{description}</p>
</a>
